<p id="notice"><%= notice %></p>

<h1>Listing User Orders</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Orderid</th>
      <th>Listofitems</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_orders.each do |user_order| %>
      <tr>
        <td><%= user_order.Username %></td>
        <td><%= user_order.OrderID %></td>
        <td><%= user_order.Listofitems %></td>
        <td><%= user_order.Total %></td>
        <td><%= link_to 'Show', user_order %></td>
        <td><%= link_to 'Edit', edit_user_order_path(user_order) %></td>
        <td><%= link_to 'Destroy', user_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

